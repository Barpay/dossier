%h1= report_class.name.titleize

%table
  %thead
    %tr
      - @report.headers.each do |header|
        %th= header
  %tbody
    - @report.rows.each do |row|
      %tr
        - row.each do |value|
          %td= value
  - if @report.footer?
    %tfoot
      %tr
        - @report.footer.each do |value|
          %th= value

= link_to 'Download CSV', dossier_report_path(:format => 'csv', :options => params[:options]), :class => 'download-csv'
